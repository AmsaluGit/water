{% block body %}
	<div class="row">
		<div class="card col-md">

			<div class="card-body">
				<div class="row">

					<div class="col-md-12">
						<div class="card card-info">
							<div class="card-header">
                            
								<h3 class="card-title">Product Details</h3><br>
								<div class="card-tools">
                                </div>
                            </div>
