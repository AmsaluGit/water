{% extends 'base.html.twig' %}

{% block title %}stock index
{% endblock %}
{% block maintitle %}
	Goods Delivery
{% endblock %}


{% block breadcrumb %}

	<li class="breadcrumb-item active">Goods Delivery</li>
{% endblock %}
{% block body %}
	<div class="row">
		<div class="card col-md">

			<div class="card-body">
             {% if edit_list %}
                    {% else %}
				<div class="row">
               
					<div class="col-md-12">
                    
						<div class="card card-info">
							<div class="card-header">
								<h3 class="card-title">
									{% if edit  %}
                                    Edit
									{% else %}
										Goods Delivery
									{% endif %}	
								</h3>

							</div>
							<!-- /.card-header -->
							<div class="card-body">
								{% if edit  %}
									{% set button_label = 'Update' %}
								{% endif %}
								{{ include('goods_delivery/_form.html.twig') }}
            

							</div>
							<!-- /.card-body -->
						</div>
					</div>
                </div>
                {% endif %}
				{% if add_item %}
                <div class="row">
                    <div class="col-md-12">
                        <form class="d-inline" method="post">
                            {% if edit_list  %}
                                {% set new_button_label = 'Update' %}
                                
                            {% endif %}
                            
                            <button id ="collapse" name="add_items" type="button" class="btn btn-primary" data-toggle="collapse" data-target="#demo">{{ new_button_label|default('Add Items') }}</button>                    <div class="col-md-12">
                             <br>  
                        </form>
                        
                    </div>
                   
                    <div class="col-md-12">
                        <div id="demo" class="card card-info collapse">
							<div class="card-header">
								<h3 class="card-title">
									Goods Delivery
								</h3>

                                <div class="card-tools">
									<button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                    </button>
								</div>
                                
							</div>
							<!-- /.card-header -->
								 {% if edit_list  %}
									{% set list_button_label = 'Update' %}
								{% endif %} 
								{{ include('goods_delivery/_form2.html.twig') }}


							
							<!-- /.card-body -->
						</div>
                    </div>
				</div>
				{% else %}
				{% endif %}
                <div class="row">
					<div class="col-md-12">
						<div class="card ">
							<div class="card-header">
								<h3 class="card-title">Sells List</h3>
								
							</div>
							<div class="card-body">
								<table class="table table-hover">
									<thead>
										<tr>
                                            <th>
												#
											</th>
											<th>Product</th>
											<th>Specification</th>
											<th>quantity</th>
											<th>Weight</th>
											<th>unit price</th>
                                            <th>Total price</th>
                                            <th>Action</th>
										</tr>
									</thead>
									<tbody>
										{% set i = 1 %}
										{% for sell in sells_list %}
											<tr>
                                                <td>
													{{ i }}
													{% set i = i+1 %}
												</td>
                                                <td>{{ sell.product }}</td>
                                                <td>{{ sell.specification }}</td>
                                                <td>{{ sell.quantity }}</td>
                                                <td>{{ sell.weight }}</td>
                                                <td>{{ sell.unitPrice }}</td>
                                                <td>{{ sell.quantity * sell.unitprice }}</td>
                                                <td>
                                                <form class="d-inline" method="post" action="{{ path('edit_sells_list_index',{'id' : sell.id}) }}">
                                                    <input type="hidden" name="edit_list" value="{{sell.id}}">
                                                    <button  class="btn btn-info btn-sm" title="Edit">
                                                        <i class="fa fa-edit"></i>
                                                    </button>
                                                </form>															
                                                <form class="d-inline" method="post" action="{{ path('sells_list_delete', {'id': sell.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <input
                                                    type="hidden" name="_token" value="{{ csrf_token('delete' ~ sell.id) }}">
                                                    {#  <button type="button" data-type="confirm" class="btn btn-danger js-sweetalert" title="Delete">#}
                                                    <button class="btn btn-danger btn-sm" title="Delete">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </form>
                                                </td>
                        
											</tr>
										{% else %}
											<tr>
												<td colspan="5">no records found</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
					<!-- /.card-body -->
				</div>
			</div>

		</div>
		<!-- /.card-body -->
	</div>

{# {{dump(id)}}  #}
{% endblock %}
