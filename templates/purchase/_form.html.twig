{{ form_start(form_stockRequest,{'attr': {'role':'form'}}) }}

	<div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
					<label class="control-label no-padding-right">{{ form_label(form_stockRequest.requestingDept) }}</label>
					{{ form_widget(form_stockRequest.requestingDept,{'attr':{'class':'form-control'}}) }}
					<div class="help-block with-errors"></div>
				</div>
				
	
				<div class="form-group ">
					<label class="control-label no-padding-right">{{ form_label(form_stockRequest.section) }}</label>
					{{ form_widget(form_stockRequest.section,{'attr':{'class':'form-control'}}) }}
					<div class="help-block with-errors"></div>
				</div>
				

				<div class="form-group row">
					
					{% if not button_label is defined  %}
						
						<div class="col-4">
							<button class="form-control btn btn-success" >{{ button_label|default('Save') }}</button>
						</div>
						{# <div class="col-4">
							<button class="form-control btn  btn-warning " style="margin-right:20px;" type="reset">Reset</button>
						</div> #}
						<div class="col-4">
							<a href="{{ path('purchase_index') }}" class="form-control btn btn-primary" style = "float:right;">
								Back
							</a>
						</div>
						
					{% else %}
						<input type="hidden" name="edit" value="{{edit}}">
						<div class="col-4">
							<button class="form-control btn btn-success mr-2" >{{ button_label|default('Save') }}</button>
						</div>
						<div class="col-4">
							<a href="{{ path('purchase_index') }}" class="form-control btn btn-primary" style = "float:right;">
								Back
							</a>
						</div>
					{% endif %}
					<div class="help-block with-errors"></div>
				 
				</div>
			</div>
			

				<div class="form-group ">
					<label class="control-label no-padding-right"></label>
					
				</div>



				
	  		</div>		
		</div>
	</div>



{{ form_end(form_stockRequest) }}