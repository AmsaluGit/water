{{ form_start(form_list,{'attr': {'role':'form'}}) }}

	<div class="form-group ">
		<label class="control-label no-padding-right">{{ form_label(form_list.product) }}</label>
		{{ form_widget(form_list.product,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group ">
		<label class="control-label no-padding-right">{{ form_label(form_list.codeNumber) }}</label>
		{{ form_widget(form_list.codeNumber,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>

	<div class="form-group ">
		<label class="control-label no-padding-right">{{ form_label(form_list.unitOfMeasure) }}</label>
		{{ form_widget(form_list.unitOfMeasure,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>

    <div class="form-group ">
		<label class="control-label no-padding-right">{{ form_label(form_list.quantity) }}</label>
		{{ form_widget(form_list.quantity,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	
	<div class="modal-footer justify-content-between">
		{% if not button_label is defined  %}
		    <input type="hidden" name="list_submit" value="{{consumption_request.id}}" />
		    <button class="btn btn-warning btn-outline-light mr-2" style="margin-right:20px;" type="reset">Reset</button>
			<button type="submit" class="btn btn-success btn-outline-light" >{{ button_label|default('Save') }}</button>
		{% else %}
			{# <input type="hidden" name="edit" value="{{edit}}">
			<a class="btn btn-primary btn-outline-light" data-dismiss="modal" href="{{ path('consumption_request_list_index') }}">
				Cancel
			</a>
			<button class="btn btn-outline-light btn-success mr-2">{{ button_label|default('Save') }}</button> #}
		{% endif %}
	</div>	
{{ form_end(form_list) }}