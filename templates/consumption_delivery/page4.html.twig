<html>
    <head>
        <style>
        body{
            width:90%;
            padding:2.5px;
        }
        #table1,#th,#td{
            border: 1px solid black;
            border-collapse: collapse;
            padding-bottom: 10px;
            padding-top: 10px;
            text-align: left;


        }


           .k,#th1,#td1{
            border: 1px solid black;
            border-collapse: collapse;
            padding-bottom: 10px;
            padding-top: 10px;
            text-align:center;

           }
           .g{
            border: 1px solid black;
            border-collapse: collapse;

           }

           .col1andcol2{
            display: flex;
            flex-direction: row;
            justify-content: space-between;
           }
           @media screen and (max-width: 820px) {
               .col1andcol2{
                    display: flex;
                    flex-direction: column;
                    justify-content: space-between;
